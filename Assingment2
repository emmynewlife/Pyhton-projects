# Create a list of student names
students = ["John", "Mary", "Peter", "Grace", "James"]

# Use a for loop to print each student name
for name in students:
    print(name)


# Start with a balance of N0
balance = 0

# Create an infinite loop for the banking system
while True:
    # Display menu options
    print("\n--- BANK OF NIGERIA ---")
    print("1. Check Balance")
    print("2. Deposit Money")
    print("3. Withdraw Money")
    print("4. Exit")

    # Ask user to choose an option
    choice = input("Enter your choice (1-4): ")

    # Check balance
    if choice == "1":
        print(f"Your current balance is: ₦{balance}")

    # Deposit money
    elif choice == "2":
        amount = float(input("Enter amount to deposit: ₦"))
        balance += amount
        print(f"You have successfully deposited ₦{amount}")
        print(f"New balance: ₦{balance}")

    # Withdraw money
    elif choice == "3":
        amount = float(input("Enter amount to withdraw: ₦"))
        if amount > balance:
            print("Insufficient balance!")
        else:
            balance -= amount
            print(f"You have withdrawn ₦{amount}")
            print(f"Remaining balance: ₦{balance}")

    # Exit the program
    elif choice == "4":
        print("Thank you for using our banking system!")
        break  # stop the while loop

    # Invalid input
    else:
        print("Invalid option. Please choose 1, 2, 3, or 4.")
